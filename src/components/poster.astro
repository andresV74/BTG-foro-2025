---
interface Props {
  p1?: string;
  p2?: string;
  width: string;
  fontSize: string;
}

const { p1, p2, width, fontSize } = Astro.props;
---

<div>
  <div
    class=`${width} ${fontSize} py-4 px-4 bg-blue-6 border-5 border-blue-2`
    aria-label="Gran Foro Colombia 2025"
  >
    <div
      class="font-bold text-[7.5em]/[0.8em] text-blue-3 pt-3 border-t-5 border-blue-5"
    >
      Gran
    </div>
    <div class="font-light text-[8.5em]/[0.8em] text-blue-2 tracking-tighter">
      Foro
    </div>
    <div
      class="font-light text-[3.75em]/[0.8em] text-blue-3 pt-3 border-t-5 border-b-5 border-blue-5"
    >
      Colombia
    </div>
    <div class="font-bold text-[7em]/[0.8em] text-blue-3 mt-3">2025</div>
  </div>
  {
    p1 ? (
      <p class="mt-3 font-bold text-blue-2 text-[2.625rem]/[3rem] tracking-tighter">{p1}</p>
      <p class="text-blue-2 text-[2.625rem]/[2rem] tracking-tighter">{p2}</p>
    ) : (<hr class="hidden" />)
  }
</div>

---
import Icon from "@/assets/ico-button.svg";

interface Props {
  buttonClass?: string;
  url?: string;
  text_1: string;
  text_2: string;
  width?: string;
}

const {
  buttonClass = "header-button",
  url = "#",
  text_1,
  text_2,
  width = "w-fit",
} = Astro.props;
---

<a
  href={url}
  class=`${buttonClass} ${width} form-button`
  aria-label="RegÃ­strese ahora"
  target={url === "#" ? "_self" : "_blank"}
>
  <Icon width={18} class="me-2 shrink-0" />
  <span
    class="font-black text-[2rem]/8 lg:text-[2.125rem]/8 text-blue-3 tracking-tighter me-2"
  >
    {text_1}
  </span>
  <span
    class="font-light text-[2.25rem]/9 lg:text-[2.75rem]/11 text-blue-2 tracking-tighter"
  >
    {text_2}
  </span>
</a>

<style>
  .form-button {
    align-items: center;
    background-color: var(--color-blue-6);
    border: 4px solid var(--color-blue-2);
    cursor: pointer;
    display: flex;
    flex-wrap: nowrap;
    overflow: hidden;
    padding-inline: 16px;
    transition: all 0.3s ease-in-out;
    visibility: visible;

    &.hidden {
      border-width: 0;
      padding: 0;
      visibility: hidden;
      width: 0;
    }

    &:hover {
      background-color: var(--color-blue-7);
      border-color: var(--color-blue-1);
      width: max-content;
    }
  }
</style>
